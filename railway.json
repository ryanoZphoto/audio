{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt",
    "nixpacksConfig": {
      "python": {
        "version": "3.11"
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn wsgi:application --bind 0.0.0.0:$PORT --timeout 30",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1,
    "envVars": {
      "FLASK_APP": "wsgi.py",
      "FLASK_ENV": "production",
      "PYTHONUNBUFFERED": "1"
    }
  }
}
